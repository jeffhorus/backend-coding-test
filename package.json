{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run test:style && npm run test:service && npm run test:load",
    "test:style": "eslint .",
    "test:service": "nyc mocha tests",
    "test:load": "forever --uid \"bgserver\" start index.js && artillery run loadtest.yml && forever stop \"bgserver\"",
    "start": "node index.js"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "artillery": "^1.6.0-28",
    "body-parser": "^1.19.0",
    "expect.js": "^0.3.1",
    "express": "^4.16.4",
    "forever": "^1.0.0",
    "sqlite3": "^4.0.6",
    "underscore": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2"
  }
}
